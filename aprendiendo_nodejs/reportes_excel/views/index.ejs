<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

        <title>Colores</title>
    </hea>
    <body>
        <div class="row d-flex justify-content-center w-100" id="containerTabla">
            <div class="col-10">
                <table class="table table-bordered table-light table-striped text-center mt-4">
                    <thead>
                        <tr class="text-dark">
                            <th scope="col">CÓDIGO</th>
                            <th scope="col">CÓDIGO RGB</th>
                            <th scope="col">COLOR</th>
                            <th scope="col">CODIGO HEX</th>
                            <th scope="col">VER MAS</th>
                            <th scope="col">STATUS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%results.forEach((color)=>{%>
                            <tr>
                                <td><%=color.codigo%></td>
                                <td><%=color.RGB_CODE%></td>
                                <td style="color: <%=color.RGB_CODE%>" class="fs-5 fw-bold font-monospace"><%=color.color%></td>
                                <td><%=color.HEX_CODE%></td>
                                <td><a href="https://encycolorpedia.es/<%=color.HEX_CODE.slice(1)%>" target="_blank" class="text-decoration-none text-black fw-bold">Click aqui</a></td>
                                <td><%=color.estatus=='a' ? 'Activo' : 'Inactivo'%></td>
                            </tr>
                        <%})%>
                    </tbody>
                </table>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>

