<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

        <title>Editar Pais</title>
    </hea>
    <body>
        <div id="navbar" class="sticky-top">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">Sistema</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Horarios</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Ubicacion
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/ciudad_listar">Ciudad</a></li>
                            <li><a class="dropdown-item" href="/continente_listar">Continente</a></li>
                            <li><a class="dropdown-item" href="/estado_listar">Estado</a></li>
                            <li><a class="dropdown-item" href="/pais_listar">País</a></li>
                            <li><a class="dropdown-item" href="/zona_horaria_listar">Zona Horaria</a></li>
                            </ul>
                        </li>
                        </ul>
                    </div>
                    </div>
                </nav>
        </div>
        <%if(pais){%>
        <div class="row d-flex justify-content-center w-100 mt-4" id="contenedorFormularioUsuario">
            <div class="col-10">
                <h5>Nuevo Pais</h5>
                <form action="/update" method="post" class="mt-4">
                    <input hidden id="cod_pai" name="cod_pai" value="<%=pais.cod_pai%>">
                    <input hidden id="identificador" name="identificador" value="pais">
                    <div class="mb-3">
                        <label for="nom_pai" class="form-label">Nombre: </label>
                        <input type="text" class="form-control" id="nom_pai" name="nom_pai" placeholder="Nombre del Pais" value="<%=pais.nom_pai%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="des_pai" class="form-label">Descripción: </label>
                        <input type="text" class="form-control" id="des_pai" name="des_pai" placeholder="Descripción del Pais" value="<%=pais.des_pai%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="ali_pai" class="form-label">Alias: </label>
                        <input type="text" class="form-control" id="ali_pai" name="ali_pai" placeholder="Alias del Pais" value="<%=pais.ali_pai%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="cti_pai" class="form-label">Código telefónico internacional: </label>
                        <input type="text" class="form-control" id="cti_pai" name="cti_pai" placeholder="Codigo telefonico del Pais" value="<%=pais.cti_pai%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="fky_con" class="form-label">Continente: </label>
                        <select id="fky_con" name="fky_con" class="form-select" required>
                            <option value="">Seleccione...</option>
                            <%continentes.forEach((continente)=>{%>
                                <option <%= pais.fky_con==continente.cod_con ? 'selected' : ''%> value="<%=continente.cod_con%>"><%=continente.nom_con%></option>
                                <%})%>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="est_pai" class="form-label">Estado: </label>
                        <select id="est_pai" name="est_pai" class="form-select" required>
                            <option value="">Seleccione...</option>
                            <option <%= pais.est_pai=='A' ? 'selected' : ''%> value="A">Activo</option>
                            <option <%= pais.est_pai=='I' ? 'selected' : ''%> value="I">Inactivo</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="/pais_listar" class="btn border border-secondary">cancelar</a>
                </form>
            </div>
        </div>
        <%}%>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>